<div class="navbar navbar-fixed-top">
  <div style="width: auto;" class="navbar-inner">
    <a data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <a href="http://www.murraystate.edu/qacd/cos/geo/geo_res/Archaeology%20Lab.htm" class="brand"><%= image_tag("msu_arch_logo.jpg") %></a>
    <div class="nav-collapse">
    <span class="pull-left"><h4>The Kentukey Artifact Registry</h4></span>
      <ul class="nav pull-right">
        <li class="divider-vertical"></li>
        <% if user_signed_in? %>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
        <% end %>
        <% if !user_signed_in? %>
          <li class="dropdown">
            <a data-toggle="dropdown" class="dropdown-toggle" href="#">Help <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <% if params[:controller].parameterize != 'devise-sessions' %>
                  <li><%= link_to "Sign in", new_user_session_path %></li>
                <% end %>

                <% if params[:controller].parameterize != 'devise-registrations'  %>
                  <li><%= link_to "Sign up", new_user_registration_path %></li>
                <% end %>
                <%- if params[:controller].parameterize != 'devise-passwords' %>
                  <li><%= link_to "Forgot your password?", new_password_path(User) %></li>
                <% end -%>

                <%- if params[:controller].parameterize != 'devise-confirmations' %>
                  <li><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(User) %></li>
                <% end -%>

                <%- if params[:controller].parameterize != 'devise-unlocks' %>
                  <li><%= link_to "Didn't receive unlock instructions?", new_unlock_path(User) %></li>
                <% end -%>
            </ul>
          </li>
        <% end %>
      </ul>
    </div><!-- /.nav-collapse -->
  </div>
</div><!-- /navbar -->