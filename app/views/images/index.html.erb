<%- model_class = Image.new.class -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:file) %></th>
      <th><%= model_class.human_attribute_name(:artifact_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @images.each do |picture| %>
      <tr>
        <td><%= link_to picture.id, image_path(picture) %></td>
        <td><%= picture.description %></td>
        <td><%= picture.file %></td>
        <td><%= picture.artifact_id %></td>
        <td><%= picture.created_at %></td>
        <td>
          <%= link_to t('.edit', default: t("helpers.links.edit")), edit_image_path(picture), class: 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), image_path(picture), method: :delete, confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')), class: 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")), new_image_path(artifact_id: @images.first.artifact_id), class: 'btn btn-primary' %>