<%- model_class = @image.class -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @image.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file) %>:</strong></dt>
  <dd><%= @image.file %></dd>
  <dt><strong><%= model_class.human_attribute_name(:artifact_id) %>:</strong></dt>
  <dd><%= @image.artifact_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', default: t("helpers.links.back")),images_path, class: 'btn'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")), edit_image_path(@image), class: 'btn' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")), image_path(@image),
      method: 'delete',
      confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')),
      class: 'btn btn-danger' %>
</div>