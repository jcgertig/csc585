<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Sign in</h2>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, :placeholder => "Email Address", input_html: {:class => "input-block-level"} %>
    <%= f.input :password, :required => false, :placeholder => "Password", input_html: {:class => "input-block-level"}  %>
    <%= f.input :remember_me, :as => :boolean, wrapper_html: {class: "terms"}, input_html: {:class => "input-block-level"}  if devise_mapping.rememberable? %>
  </div>
  <div class="form-inputs">
    <%= f.button :submit, "Sign in", class: "btn btn-large btn-primary"%>
  </div>
  <div class="form-inputs pull-right">
    <%= link_to "Need an account?", new_user_registration_path, class: " " %>
  </div>
<% end %>
