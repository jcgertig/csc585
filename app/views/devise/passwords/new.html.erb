<%= simple_form_for(resource, :as => resource_name, :method => :post, :url => password_path(resource_name), :html =>{class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Forgot your password?</h2>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true, input_html: {:class => "input-block-level"} %>
  </div>

  <%= f.button :submit, "Send password instructions", class: "btn btn-large btn-primary"%>
<% end %>
