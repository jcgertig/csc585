<%= simple_form_for(resource, :as => resource_name, :method => :put, :url => password_path(resource_name), :html =>{class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Change your password</h2>
  <%= f.error_notification %>
  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>
  <div class="form-inputs">
    <%= f.input :password, :label => "New password", :required => true, :autofocus => true, input_html: {:class => "input-block-level"} %>
    <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true, :autofocus => true, input_html: {:class => "input-block-level"} %>
  </div>

  <%= f.button :submit, "Change my password", class: "btn btn-large btn-primary"%>
<% end %>