<%= simple_form_for( @artifact, html: {class: "form-horizontal"}) do |f| %>
  <%= f.hidden_field :token %>
  <% if @artifact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@artifact.errors.count, "error") %> prohibited this artifact from being saved:</h2>

      <ul>
      <% @artifact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="control-group">
      <%= f.label :artifact_type, "Type", class: 'control-label' %>
      <div class="controls">
        <%= f.input :artifact_type, required: true, collection: types, value_method: :name, include_blank: 'Select Type' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :period, "Period", class: 'control-label' %>
      <div class="controls">
        <%= f.input :period, required: true, collection: periods, value_method: :name, include_blank: 'Select Period' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :context, "Context", class: 'control-label' %>
      <div class="controls">
        <%= f.input :context, required: true, collection: contexts, value_method: :name, include_blank: 'Select Context' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :county, "County", class: 'control-label' %>
      <div class="controls">
        <%= f.input :county, required: true, collection: counties, value_method: :name, include_blank: 'Select County' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :latitude, "Latitude", class: 'control-label' %>
      <div class="controls">
        <%= f.input :latitude, required: false %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :longitude, "Longitude", class: 'control-label' %>
      <div class="controls">
        <%= f.input :longitude, required: false %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :description, as: :text, required: true, class: 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, class: 'btn btn-mini btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), artifacts_path, class: 'btn btn-mini' %>
    </div>
<% end %>